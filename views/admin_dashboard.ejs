<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Strata Vote Admin</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/admin_header') %>

  <div class="container">
    <div class="page-header">
      <h1>Dashboard</h1>
      <a href="/admin/motions/new" class="btn btn-primary">+ New Motion</a>
    </div>

    <% if (motions.length === 0) { %>
      <div class="empty-state">
        <p>No motions yet. Create your first motion to get started.</p>
        <a href="/admin/motions/new" class="btn btn-primary">Create Motion</a>
      </div>
    <% } else { %>
      <div class="motions-list">
        <% motions.forEach(motion => { %>
          <div class="motion-card">
            <div class="motion-header">
              <h3>
                <a href="/admin/motions/<%= motion.id %>"><%= motion.title %></a>
              </h3>
              <span class="badge badge-<%= motion.status.toLowerCase() %>"><%= motion.status %></span>
            </div>

            <div class="motion-meta">
              <div class="meta-item">
                <strong>Opens:</strong> <%= new Date(motion.open_at).toLocaleString() %>
              </div>
              <div class="meta-item">
                <strong>Closes:</strong> <%= new Date(motion.close_at).toLocaleString() %>
              </div>
            </div>

            <div class="motion-stats">
              <div class="stat">
                <div class="stat-value"><%= motion.stats.eligible %></div>
                <div class="stat-label">Eligible Voters</div>
              </div>
              <div class="stat">
                <div class="stat-value"><%= motion.stats.voted %></div>
                <div class="stat-label">Votes Cast</div>
              </div>
              <div class="stat">
                <div class="stat-value"><%= motion.stats.remaining %></div>
                <div class="stat-label">Remaining</div>
              </div>
              <% if (motion.stats.eligible > 0) { %>
                <div class="stat">
                  <div class="stat-value"><%= Math.round((motion.stats.voted / motion.stats.eligible) * 100) %>%</div>
                  <div class="stat-label">Turnout</div>
                </div>
              <% } %>
            </div>

            <% if (motion.outcome) { %>
              <div class="motion-outcome">
                <strong>Outcome:</strong> <span class="badge badge-outcome"><%= motion.outcome %></span>
              </div>
            <% } %>

            <div class="motion-actions">
              <a href="/admin/motions/<%= motion.id %>" class="btn btn-secondary btn-sm">View Details</a>
              <a href="/admin/motions/<%= motion.id %>/tokens" class="btn btn-secondary btn-sm">Manage Tokens</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
