<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Spectrum 4 Voting System</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/admin_header') %>

  <div class="container">
    <div class="page-header">
      <h1>Dashboard</h1>
      <a href="/admin/motions/new" class="btn btn-primary">+ New Motion</a>
    </div>

    <!-- Date Filter Form -->
    <div class="card">
      <h3>Filter Motions</h3>
      <form method="GET" action="/admin/dashboard" class="form">
        <div class="form-row">
          <div class="form-group">
            <label for="start_date">From Date</label>
            <input type="datetime-local"
                   id="start_date"
                   name="start_date"
                   value="<%= startDate || '' %>">
            <small>Filter by closing date range</small>
          </div>

          <div class="form-group">
            <label for="end_date">To Date</label>
            <input type="datetime-local"
                   id="end_date"
                   name="end_date"
                   value="<%= endDate || '' %>">
          </div>
        </div>

        <div style="display: flex; gap: 1rem;">
          <button type="submit" class="btn btn-primary">Apply Filter</button>
          <% if (isFiltered) { %>
            <a href="/admin/dashboard" class="btn btn-secondary">Clear Filter</a>
          <% } %>
        </div>
      </form>

      <% if (isFiltered) { %>
        <div class="alert alert-info" style="margin-top: 1rem;">
          <strong>Filtered:</strong> Showing motions closing between
          <%= new Date(startDate).toLocaleString() %> and <%= new Date(endDate).toLocaleString() %>
          (<%= motions.length %> results)
        </div>
      <% } else { %>
        <p class="text-muted" style="margin-top: 1rem;">
          Showing last 10 motions. Use date filter to search by date range.
        </p>
      <% } %>
    </div>

    <% if (motions.length === 0) { %>
      <div class="empty-state">
        <% if (isFiltered) { %>
          <p>No motions found for the selected date range.</p>
          <a href="/admin/dashboard" class="btn btn-secondary">Clear Filter</a>
        <% } else { %>
          <p>No motions yet. Create your first motion to get started.</p>
          <a href="/admin/motions/new" class="btn btn-primary">Create Motion</a>
        <% } %>
      </div>
    <% } else { %>
      <div class="motions-list">
        <% motions.forEach(motion => { %>
          <div class="motion-card">
            <div class="motion-header">
              <h3>
                <a href="/admin/motions/<%= motion.id %>"><%= motion.title %></a>
              </h3>
              <span class="badge badge-<%= motion.status.toLowerCase() %>"><%= motion.status %></span>
            </div>

            <div class="motion-meta">
              <div class="meta-item">
                <strong>Opens:</strong> <%= new Date(motion.open_at).toLocaleString() %>
              </div>
              <div class="meta-item">
                <strong>Closes:</strong> <%= new Date(motion.close_at).toLocaleString() %>
              </div>
            </div>

            <div class="motion-stats">
              <div class="stat">
                <div class="stat-value"><%= motion.stats.eligible %></div>
                <div class="stat-label">Eligible Voters</div>
              </div>
              <div class="stat">
                <div class="stat-value"><%= motion.stats.voted %></div>
                <div class="stat-label">Votes Cast</div>
              </div>
              <div class="stat">
                <div class="stat-value"><%= motion.stats.remaining %></div>
                <div class="stat-label">Remaining</div>
              </div>
              <% if (motion.stats.eligible > 0) { %>
                <div class="stat">
                  <div class="stat-value"><%= Math.round((motion.stats.voted / motion.stats.eligible) * 100) %>%</div>
                  <div class="stat-label">Turnout</div>
                </div>
              <% } %>
            </div>

            <% if (motion.outcome) { %>
              <div class="motion-outcome">
                <strong>Outcome:</strong> <span class="badge badge-outcome"><%= motion.outcome %></span>
              </div>
            <% } %>

            <div class="motion-actions">
              <a href="/admin/motions/<%= motion.id %>" class="btn btn-secondary btn-sm">View Details</a>
              <a href="/admin/motions/<%= motion.id %>/tokens" class="btn btn-secondary btn-sm">Manage Tokens</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
